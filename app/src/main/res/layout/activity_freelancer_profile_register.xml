<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/profile_register_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="96dp"
        android:layout_below="@id/profile_register_toolbar"
        android:layout_height="96dp"
        android:src="@drawable/send_message"
        android:layout_marginLeft="150dp"
        android:id="@+id/profile_register_picture"
        android:layout_marginTop="45dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@+id/profile_register_picture"
        android:layout_marginTop="10dp"
        android:id="@+id/profile_register_name"
        android:hint="Your Name"
        />


    <EditText
        android:id="@+id/profile_register_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_below="@id/profile_register_name"
        android:hint="pH NO HERE"
        android:textAlignment="center" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_register_phone"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:id="@+id/profile_register_address"
        android:hint="Room no:404, loren ipsum complex, kochi, kerala"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/profile_register_address"
        android:layout_marginLeft="150dp"
        android:id="@+id/profile_register_button"
        android:textAllCaps="false"
        android:text="Get things done"/>



</RelativeLayout>